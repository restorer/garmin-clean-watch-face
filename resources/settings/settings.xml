            <listEntry value="0x00AA00">@Strings.PropColorDkGreen</listEntry>
            <listEntry value="0x00AAFF">@Strings.PropColorBlue</listEntry>
            <listEntry value="0x0000FF">@Strings.PropColorDkBlue</listEntry>
            <listEntry value="0x5500AA">@Strings.PropColorPurple</listEntry>
            <listEntry value="0xFF00FF">@Strings.PropColorPink</listEntry>
        </settingConfig>
    </setting>

