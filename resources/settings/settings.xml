<resources>
    <setting propertyKey="@Properties.Theme" title="@Strings.PropTheme">
        <settingConfig type="list">
            <listEntry value="0">@Strings.PropThemeAuto</listEntry>
            <listEntry value="1">@Strings.PropThemeBlackOnWhite</listEntry>
            <listEntry value="2">@Strings.PropThemeWhiteOnBlack</listEntry>
            <listEntry value="-1">@Strings.PropThemeCustom</listEntry>
        </settingConfig>
    </setting>

